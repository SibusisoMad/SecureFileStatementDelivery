<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="Console" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{ISO8601} level=%-5level logger=%logger correlationId=%property{correlationId} traceId=%property{traceId} method=%property{httpMethod} path=%property{httpPath} status=%property{statusCode} elapsedMs=%property{elapsedMs} msg=%message%newline%exception" />
    </layout>
  </appender>

  <root>
    <level value="INFO" />
    <appender-ref ref="Console" />
  </root>
</log4net>
